    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        root /var/www/html/moviestar/;
        # fastcgi_pass application:9000;
        fastcgi_index index.php;
        include fastcgi_params;
        include fastcgi.conf;
    }
}

